@using EksamenWPF_WEB.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<EksamenWPF_WEBUser> SignInManager
@inject UserManager<EksamenWPF_WEBUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <ul class="nav navbar-nav navbar-left">
        <li><a asp-area="" asp-controller="Models" asp-action="UpComing">Coming assignments</a></li>
        <li><a asp-area="" asp-controller="Models" asp-action="previous">Previous assignments</a></li>
        <li><a asp-area="" asp-controller="Models" asp-action="expenses">Report on expenses</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </form>
    </ul>

      
    

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}